# 데이터베이스 연결 정보
DATABASE_URL=postgresql://username:password@hostname:port/database

# 세션 보안 키 (랜덤 문자열)
SESSION_SECRET=your-super-secret-random-string-here

# 앱 식별자
REPL_ID=your-app-id

# 인증 설정
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your-domain.com

# 개발/프로덕션 환경
NODE_ENV=production

# 포트 설정 (선택사항)
PORT=5000